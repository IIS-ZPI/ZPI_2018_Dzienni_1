                <TableColumn fx:id="stateColumn" prefWidth="75.0" text="State" />
                <TableColumn fx:id="nettoColumn" prefWidth="75.0" text="Netto" />
                <TableColumn fx:id="bruttoColumn" prefWidth="75.0" text="Brutto" />
