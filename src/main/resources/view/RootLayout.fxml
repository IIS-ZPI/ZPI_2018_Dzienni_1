        <TextField fx:id="sellingPriceTextField" layoutX="15.0" layoutY="149.0" promptText="Selling Final Price" />
        <Button fx:id="buttonCalculate" layoutX="15.0" layoutY="356.0" mnemonicParsing="false" onAction="#calculate" text="Calculate" />
        <ComboBox fx:id="comboBoxProducts" layoutX="14.0" layoutY="57.0" prefWidth="150.0" />
      <ComboBox fx:id="comboBoxCategories" layoutX="14.0" layoutY="16.0" prefWidth="150.0" />
